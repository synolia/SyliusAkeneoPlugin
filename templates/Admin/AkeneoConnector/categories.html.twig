{% extends '@SynoliaSyliusAkeneoPlugin/Admin/layout.html.twig' %}

{% import '@SyliusUi/Macro/headers.html.twig' as headers %}

{% block title %}{{ 'sylius.ui.admin.akeneo.categories.title'|trans }} {{ parent() }}{% endblock %}

{% block content %}
    {{ headers.default(
        'sylius.ui.admin.akeneo.categories.title'|trans,
        'cogs',
        'sylius.ui.admin.akeneo.categories.subtitle'|trans
    ) }}
    {% block breadcrumb %}
        {% set breadcrumbs = breadcrumbs|merge([
            {label: 'sylius.ui.admin.akeneo.categories.title'|trans}
        ]) %}
        {{ parent() }}
    {% endblock %}
    {{ form_start(form, {'attr': {'class': 'ui loadable form'}}) }}
    <div class="ui segment">
        {{ form_row(form) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
